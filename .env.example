# Environment Configuration for Upskill Training Platform
# Copy this file to .env and update with your actual values

# Site Configuration
SITE_URL=https://upskill.codezerra.com

# Database Configuration
# For DreamHost: Use the MySQL hostname from your DreamHost panel (e.g., mysql.example.com)
# DO NOT use 'localhost' on DreamHost
DB_HOST=localhost
DB_NAME=upskill_training
DB_USER=root
DB_PASS=

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Environment Mode
# Set to 'production' to disable error display
APP_ENV=development

# Security
# Generate a random string for session security
SESSION_SECRET=your_random_secret_key_here
